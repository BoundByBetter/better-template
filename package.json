{
  "name": "better-template",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "private": true,
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "deps:install": "yarn install",
    "deps:check": "npx npm-check-updates && npx expo install --check",
    "deps:check-all": "yarn deps:check && yarn workspaces foreach --all run deps:check",
    "deps:add": "npx expo install",
    "deps:add-dev": "node tools/scripts/deps-install-dev.js",
    "deps:fix": "YARN_ENABLE_IMMUTABLE_INSTALLS=false && npx expo install --fix",
    "deps:fix-all": "yarn deps:fix && yarn workspaces foreach --all run deps:fix",
    "deps:upgrade": "node tools/scripts/deps-upgrade.js",
    "code:lint-all": "npx eslint .",
    "code:compile-all": "npx tsc -b",
    "test:run-all": "npx jest --color",
    "test:cover-all": "npx jest --color --coverage",
    "mobile:devices": "adb devices",
    "mobile:wireless": "ip=$(adb shell ip -f inet addr show wlan0 | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}') && adb tcpip 5555 && adb connect $ip",
    "e2e:web": "yarn app:start-and-web-e2e && yarn site:start-and-web-e2e",
    "start:cypress:app": "yarn workspace @boundbybetter/app run cypress open",
    "start:site": "yarn workspace @boundbybetter/site run start",
    "start:site:web": "yarn workspace @boundbybetter/site run web",
    "start:site:android": "yarn workspace @boundbybetter/site run android"
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@types/eslint": "^8",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.0",
    "@types/react-test-renderer": "^18",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "jest": "^29.2.1",
    "jest-expo": "^51.0.3",
    "prettier": "^3.3.3",
    "react-test-renderer": "~18.2.0"
  },
  "dependencies": {
    "expo": "~51.0.31",
    "react": "18.2.0",
    "react-native": "0.74.5"
  }
}
