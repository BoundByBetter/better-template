// Cmd/Cntrl+Shift+P -> Tasks: Run Task -> Select Task
// Cmd/Cntrl+Shift+P -> Fold Level 3 to collapse task definitions to just names.
{
  "version": "2.0.0",
  "tasks": [
		{ "label": "Install dependencies",
			"detail": "Runs yarn install to install all dependencies. Included for completeness.",
      "type": "shell",
      "command": "yarn install",
      "problemMatcher": []
    },
		{ "label": "Check dependencies",
			"detail": "Uses npm-check-updates and expo install --check to help identify available updates.  Beware, npm-check-updates will return updates that you should not install because of Expo.",
      "type": "shell",
      "command": "yarn check-deps:all",
      "problemMatcher": []
    },
		{ "label": "Add dev dependencies",
			"detail": "Uses expo to add new dev dependencies to a workspace.",
      "type": "shell",
      "command": "npx expo install ${input:dependencies} -- -D",
      "options": {
        "cwd": "${input:selectProjectFolder}"
      },
      "problemMatcher": []
    },
		{ "label": "Add dependencies",
			"detail": "Uses expo to add new dev dependencies to a workspace.",
      "type": "shell",
      "command": "npx expo install ${input:dependencies}",
      "options": {
        "cwd": "${input:selectProjectFolder}"
      },
      "problemMatcher": []
    },
		{ "label": "Update dependencies",
			"detail": "Updates all depdencies using npm_check_updates and then uses Expo to fix any dependency version mismatches.",
      "type": "shell",
      "command": "yarn update-deps:all",
      "problemMatcher": []
    },
    { "label": "Build",
      "type": "shell",
      "command": "yarn",
      "args": ["build:all"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    { "label": "Build and Watch",
      "type": "shell",
      "command": "yarn",
      "args": [
        "chokidar",
        "'packages/**/*.js'",
        "'packages/**/*.ts'",
        "'packages/**/*.tsx'",
        "'packages/**/*.test.ts'",
        "'packages/**/*.test.tsx'",
        "'apps/**/*.js'",
        "'apps/**/*.ts'",
        "'apps/**/*.tsx'",
        "'apps/**/*.test.ts'",
        "'apps/**/*.test.tsx'",
        "-c",
        "yarn build:all",
        "--initial"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$eslint-stylish"],
      "isBackground": true,
      "detail": "Lints all ts, tsx, js, and jsx files on change."
    },
    { "label": "Build App for Android",
      "type": "shell",
      "command": "yarn",
      "args": ["build:android"],
      "problemMatcher": [],
      "detail": "Builds the app for android."
    },
    { "label": "Install App for Android",
      "type": "shell",
      "command": "yarn",
      "args": ["install:android"],
      "problemMatcher": [],
      "detail": "Installs the app for android."
    },
    { "label": "Lint",
      "type": "shell",
      "command": "yarn",
      "args": ["lint:all"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$eslint-stylish"],
      "detail": "Lints all ts, tsx, js, and jsx files."
    },
    { "label": "Lint and Watch",
      "type": "shell",
      "command": "yarn",
      "args": [
        "chokidar",
        "'packages/**/*.js'",
        "'packages/**/*.ts'",
        "'packages/**/*.tsx'",
        "'packages/**/*.test.ts'",
        "'packages/**/*.test.tsx'",
        "'apps/**/*.js'",
        "'apps/**/*.ts'",
        "'apps/**/*.tsx'",
        "'apps/**/*.test.ts'",
        "'apps/**/*.test.tsx'",
        "-c",
        "yarn lint:all"
      ],
      "dependsOn": ["Lint"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$eslint-stylish"],
      "isBackground": true,
      "detail": "Lints all ts, tsx, js, and jsx files on change."
    },
    { "label": "Test",
      "type": "shell",
      "command": "yarn",
      "args": ["test:all"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": {
        "source": "jest",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^\\s*(\\d+|)\\)\\s(.*)$",
            "message": 2
          },
          {
            "regexp": "^\\s*at\\s(.*)\\s\\(([^:]*):(\\d+):(\\d+)\\)$",
            "file": 2,
            "line": 3,
            "column": 4
          }
        ]
      },
      "detail": "Runs all tests in the project.  Use the jest runner when you want to watch."
    },
    { "label": "Start App for Web",
      "type": "shell",
      "command": "yarn",
      "args": ["app:web"],
      "problemMatcher": [],
      "detail": "Starts the app using yarn start:app:web command."
    },
    { "label": "Start App for Android",
      "type": "shell",
      "command": "yarn",
      "args": ["app:android"],
      "problemMatcher": [],
      "detail": "Starts the app for android."
    },
    { "label": "Open Cypress",
      "type": "shell",
      "command": "yarn",
      "args": ["start:cypress:app"],
      "problemMatcher": [],
      "detail": "Opens cypress using yarn start:cypress:app command."
    },
    { "label": "Start E2E dev for app",
      "dependsOn": ["Start App for Web", "Open Cypress"],
      "problemMatcher": [],
      "detail": "Runs both start-app and start-cypress tasks in parallel."
    },
    { "label": "Test with Coverage",
      "type": "shell",
      "command": "yarn",
      "args": ["cover:all"],
      "problemMatcher": [],
      "detail": "Starts the app using yarn start:app:web command."
    },
  ],
  "inputs": [
    {
			"id": "selectProjectFolder",
			"type": "pickString",
			"description": "Select a project",
			"options": [
        "",
        "apps/app", 
        "apps/admin", 
        "apps/site", 
        "packages/features", 
        "packages/shared", 
        "packages/state", 
        "packages/ui"
      ],
    },
    {
      "id": "dependencies",
      "type": "promptString",
      "description": "Enter a space separate list of dependencies to install.",
    },
  ]
}
