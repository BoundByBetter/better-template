{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "tsc",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ],
      "detail": "Compiling..."
    },
    {
      "label": "build-watch",
      "type": "shell",
      "command": "tsc -w",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ],
      "detail": "Watching..."
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "npx eslint",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "detail": "Linting..."
    },
    {
      "label": "lint-watch",
      "type": "shell",
      "command": "watch",
      "args": [
        "-n",
        "1", // Interval in seconds
        "npx eslint ."
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "detail": "Watching..."
    }
  ]
}