{
  "name": "@boundbybetter/shared",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "author": "Stewart Armbrecht",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc --build",
    "test": "jest --color",
    "cover": "jest --color --coverage"
  },
  "jest": {
    "preset": "jest-expo",
    "roots": [
      "<rootDir>/src"
