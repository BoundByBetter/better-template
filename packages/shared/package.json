    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "coverageDirectory": "../../coverage/shared"
  },
  "private": true,
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7"
  }
}
