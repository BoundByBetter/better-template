{
  "name": "@boundbybetter/shared",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "author": "Stewart Armbrecht",
  "license": "MIT",
  "scripts": {
    "check:dependencies": "npx npm-check-updates && npx expo install --check",
    "lint": "eslint .",
    "build": "tsc",
    "test": "npx jest --color",
    "cover": "npx jest --color --coverage"
  },
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7"
  },
  "jest": {
    "preset": "jest-expo",
    "roots": [
      "<rootDir>/src"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "coverageDirectory": "../../coverage/shared"
  }
}
