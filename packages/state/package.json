{
  "name": "@boundbybetter/state",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "author": "Stewart Armbrecht",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "clean": "rimraf ./dist",
    "build": "tsc --build",
    "test": "jest --color",
    "cover": "jest --color --coverage"
  },
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "react": "~18.2.0",
    "react-redux": "^9.1.2"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.5.2",
    "@types/eslint": "^8",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "react-native": "0.74.3",
    "react-test-renderer": "18.2.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.3.3"
  },
  "jest": {
    "preset": "@testing-library/react-native",
    "setupFilesAfterEnv": [
      "./test/test.setup.ts"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-redux|@react-native|react-native))"
    ],
    "moduleNameMapper": {
      "@boundbybetter/shared": "<rootDir>/../shared"
    },
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "coverageDirectory": "../../coverage/state"
  }
}
