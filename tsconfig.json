{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@boundbybetter/*": [
        "./packages/*/src"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "include": [
    "packages/*/src",
    "apps/app",
    "apps/site",
    "babel.config.test.js"
  ],
  "exclude": [
    "node_modules", 
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js",
    "apps/site/dist",
    "apps/app/dist"
  ]
}
