{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react-native",
    "paths": {
      "@boundbybetter/*": [
        "./packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src",
    "apps/app",
    "apps/site",
    "babel.config.test.js"
  ],
  "exclude": [
    "node_modules",
    "apps/site/dist",
    "apps/app/dist"
  ],
  "extends": "expo/tsconfig.base"
}
