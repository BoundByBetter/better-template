{
  "name": "@boundbybetter/site",
  "version": "1.0.0",
  "main": "../../node_modules/expo-router/entry",
  "author": "Stewart Armbrecht",
  "license": "MIT",
  "scripts": {
    "deps:check": "npx npm-check-updates && npx expo install --check",
    "deps:add": "npx expo install",
    "deps:add-dev": "node tools/scripts/deps-install-dev.js",
    "deps:fix": "YARN_ENABLE_IMMUTABLE_INSTALLS=false && npx expo install --fix",
    "site:start": "EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start",
    "site:lint": "npx eslint .",
    "site:build": "npx tsc -b",
    "site:test": "npx jest --colors",
    "site:run-android": "EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo run:android",
    "site:build-android-local": "npx eas build --platform android --profile development --local --output ./better-app.dev.apk",
    "site:install-android": "adb install -r ./better-app.dev.apk",
    "site:android": "EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start --android --dev-client",
    "site:ios": "EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start --ios --dev-client",
    "site:web": "EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start --web",
    "site:export-and-serve": "npx expo export --platform web && npx serve -s dist -p 3000",
    "site:web-e2e": "npx cypress run",
    "site:web-e2e-dev": "npx cypress open",
    "site:start-and-web-e2e-dev": "chmod +x ./test/start-run-web-e2e-dev.sh && ./test/start-run-web-e2e-dev.sh",
    "site:export-and-serve-e2e": "chmod +x ./test/export-serve-run-web-e2e.sh && ./test/export-serve-run-web-e2e.sh",
    "site:mobile-e2e": "maestro test ./maestro/master-flow.yaml",
    "site:start-and-mobile-e2e": "chmod +x ./test/run-tests.sh && ./test/run-tests.sh"
  },
  "dependencies": {
    "@boundbybetter/features": "workspace:*",
    "@boundbybetter/ui": "workspace:*",
    "@expo/vector-icons": "^14.0.3",
    "@react-navigation/drawer": "^6.7.2",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "@reduxjs/toolkit": "^2.2.7",
    "expo": "~51.0.31",
    "expo-auth-session": "~5.5.2",
    "expo-constants": "~16.0.2",
    "expo-crypto": "^13.0.2",
    "expo-font": "~12.0.10",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.20",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.7",
    "expo-web-browser": "~13.0.3",
    "jwt-decode": "^4.0.0",
    "react": "18.2.0",
    "react-dom": "~18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@tamagui/babel-plugin": "^1.106.0",
    "@types/node": "^22.1.0",
    "@types/react": "~18.2.45",
    "cypress": "^13.13.3",
    "typescript": "~5.3.3"
  },
  "private": true
}
