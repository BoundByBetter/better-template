{
  "name": "@boundbybetter/app",
  "version": "1.0.0",
  "main": "../../node_modules/expo-router/entry",
  "author": "Stewart Armbrecht",
  "license": "MIT",
  "scripts": {
    "deps:check": "npx npm-check-updates && npx expo install --check",
    "deps:add": "npx expo install",
    "deps:add-dev": "node tools/scripts/deps-install-dev.js",
    "deps:fix": "YARN_ENABLE_IMMUTABLE_INSTALLS=false && npx expo install --fix",

    "app:start": "EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start",
    "app:lint": "npx eslint .",
    "app:build": "npx tsc -b",
    "app:test": "npx jest --colors",

    "app:build-android-local-dev": "npx eas build --platform android --profile development --local --output ./better-app.dev.apk",
    "app:build-android-local-preview": "npx eas build --platform android --profile preview --local --output ./better-app.preview.apk",
    "app:install-android-dev": "adb install -r ./better-app.dev.apk",
    "app:install-android-preview": "adb install -r ./better-app.preview.apk",
    "app:build-install-android-dev": "yarn app:build-android-local-dev && yarn app:install-android-dev",
    "app:build-install-android-preview": "yarn app:build-android-local-preview && yarn app:install-android-preview",
    "app:run-android-dev": "APP_VARIANT=dev EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo run:android",
    "app:run-android-preview": "APP_VARIANT=preview EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo run:android --variant release",

    "app:android": "APP_VARIANT=dev EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start --android --dev-client",
    "app:ios": "APP_VARIANT=dev EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start --ios --dev-client",
    "app:web": "APP_VARIANT=dev EXPO_USE_METRO_WORKSPACE_ROOT=1 npx expo start --web",

    "app:export-and-serve": "npx expo export --platform web && npx serve -s dist -p 3000",

    "app:web-e2e": "npx cypress run --config-file e2e/cypress.config.ts",
    "app:web-e2e-dev": "npx cypress open --config-file e2e/cypress.config.ts",
    "app:start-and-web-e2e-dev": "chmod +x ./test/start-run-web-e2e-dev.sh && ./test/start-run-web-e2e-dev.sh",
    "app:export-and-serve-e2e": "chmod +x ./test/export-serve-run-web-e2e.sh && ./test/export-serve-run-web-e2e.sh",

    "app:mobile-e2e": "maestro test e2e/tests/master-flow.yaml",
    "app:mobile-build-install-e2e": "yarn app:build-android-local-preview && yarn app:install-android-preview && yarn app:mobile-e2e"
  },
  "dependencies": {
    "@babel/core": "^7.24.0",
    "@boundbybetter/features": "workspace:*",
    "@boundbybetter/shared": "workspace:*",
    "@boundbybetter/state": "workspace:*",
    "@boundbybetter/ui": "workspace:*",
    "@expo/metro-runtime": "3.2.3",
    "@expo/vector-icons": "^14.0.3",
    "@react-navigation/drawer": "^6.7.2",
    "@react-navigation/native": "^6.1.18",
    "@shopify/flash-list": "1.6.4",
    "expo": "~51.0.31",
    "expo-constants": "~16.0.2",
    "expo-dev-client": "~4.0.26",
    "expo-font": "~12.0.10",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.20",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-updates": "~0.25.25",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "react-native-svg-transformer": "^1.5.0"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.5.2",
    "@types/babel__core": "^7",
    "@types/node": "^22.1.0",
    "@types/react": "~18.2.45",
    "cypress": "^13.13.3",
    "expo-screen-orientation": "^7.0.5",
    "react-test-renderer": "~18.2.0"
  },
  "private": true
}
